<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyGithubPeopleList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_200</item>
        <item name="colorPrimaryVariant">@color/grey_500</item>
        <item name="colorOnPrimary">@color/black_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_200</item>
        <item name="colorSecondaryVariant">@color/grey_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_700</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/black_200</item>
        <item name="background">@color/black_500</item>
    </style>

    <style name="TextCardColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTabColor">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="IconTintColor">
        <item name="tint">@color/white</item>
    </style>
</resources>